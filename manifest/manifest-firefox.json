{
  "manifest_version": 2,
  "name": "HSR-Ext",
  "version": "1.0",
  "description": "Extension captures information while browsing the official website for viewing characters info and load dumps.",
  "homepage_url": "https://github.com/Vestrond/hsr-ext",
  "icons": {
    "48": "icons/crystal-48.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "32": "icons/crystal-32.png",
      "48": "icons/crystal-48.png"
    },
    "default_title": "HSR-Ext",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://act.hoyolab.com/app/community-game-records-sea/rpg/*"],
      "js": ["hsr-ext.js"],
      "run_at": "document_end"
    }
  ]
}